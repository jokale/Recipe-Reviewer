<center><h2>Create a new dietary requirement</h2></center>




<%= form_for Diet.new do |f|%>

  <% if @diet.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @diet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<div class="field<%= ' field_with_errors' if @diet.errors[:category].any? %>">
  <center><br><%= f.label :category %><br></center>
 <center><br><%= f.text_field :category %><br></center>
</div>

<div class="field<%= ' field_with_errors' if @diet.errors[:description].any? %>">
  <center><br><%= f.label :description %><br></center>
  <center><br><%= f.text_area :description %><br></center>
</div>



  <center><br><h2><%= f.submit "Create diet requirement" %></h2><br></center>
<% end %>